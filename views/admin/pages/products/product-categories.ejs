<%- include('../../partials/header'); %>
<%- include('../../partials/sidebar'); %>
<div class="content-wrapper">
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Product Categories</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/dashboard">Home</a></li>
              <li class="breadcrumb-item active">Categories</li>
            </ol>
          </div>
        </div>
      </div>
    </div>

    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-4">
            <% if (locals.cat_errors) { 
            
              cat_errors.forEach(function(error_msg){ %>
              <div class="alert alert-danger" role="alert"><%= error_msg %></div>
            <% });
            } %>
            <p>Product categories for your store can be managed here. To change this order of categories on the front-end you can drag and drop to sort them.</p>
            <form action="" method="post">
              <div class="form-group">
                <label for="category-name">Name</label>
                <input type="text" class="form-control" id="category_name" name="category_name">
                <small id="cathelp" class="form-text text-muted">The name is how it appears on your site.</small>
              </div>
              <div class="form-group">
                <label for="category-slug">Slug</label>
                <input type="text" class="form-control" id="category_slug" name="category_slug">
                <small id="cathelp" class="form-text text-muted">The name is how it appears on your site.</small>
              </div>
              <div class="form-group">
                <label for="parent-category">Parent category</label>
                <select class="form-control" id="parent_category" name="parent_category">
                  
                </select>
              </div>
              <div class="form-group">
                <label for="catdescription">Description</label>
                <textarea class="form-control" id="category_description" name="category_description" rows="3"></textarea>
              </div>
              <div class="form-group">
                <label for="cat-thumb">Thumbnail</label>
                <input type="file" class="form-control-file" id="cat_thumbnail" name="cat_thumbnail">
              </div>
              
              <button type="submit" class="btn btn-primary">Add new category</button>
            </form>
          </div>
          
          
         
        </div>
      </div>
    </section>
  </div>
  <%- include('../../partials/footer'); %>